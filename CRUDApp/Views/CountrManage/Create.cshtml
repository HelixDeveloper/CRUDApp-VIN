@model CRUDApp.Models.Database.CountryModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<form asp-action="Create">
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
    <div class="mb-3">
        <label asp-for="CountryName" class="form-label"></label>
        <input asp-for="CountryName" class="form-control form-control-sm" />
        <span asp-validation-for="CountryName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CountryCode" class="form-label"></label>
        <input asp-for="CountryCode" class="form-control form-control-sm" />
        <span asp-validation-for="CountryCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-sm btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

